/* SHORT HAND */
let defaultName 


// If Else Condition
function ifElse (firstName) {
    if (firstName) {
        defaultName = firstName
    } else {
        defaultName = 'Stranger'
    }

    console.log(defaultName)
}

// If Else One Line (For single process)
function ifElseOneLine (firstName) {
    if (firstName) defaultName = firstName
    else defaultName = 'Stranger'

    console.log(defaultName)
}

// Short-Circuit Evaluation
function shortCircuitEval (firstName) {
    let defaultName = firstName || 'Stranger' 
    console.log(defaultName)
}


// Ternary Expression
function ternaryExpression (firstName) {
    let defaultName = firstName ? firstName : 'Stranger'
    console.log(defaultName)
}

ifElse('Jojo')
ifElseOneLine('Jojo')
shortCircuitEval('Jojo')
ternaryExpression('Jojo')